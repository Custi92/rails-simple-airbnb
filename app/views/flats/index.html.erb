<div class="container mt-4">
  <h1>All our flats</h1>
    <p></p>
    <h2><%= link_to "Add a new flat", new_flat_path %></h2>
    <br>
  <ul>
  <% @flats.each do |flat| %>
      <br>
      <h2><%= link_to flat.name, flat_path(flat) %></h2>
      <p>Address: <%= flat.address %></p>
      <p>Price per night: <%= flat.price_per_night %></p>
      <p>Number of guests: <%= flat.number_of_guests %></p>
      <%= link_to "Edit", edit_flat_path(flat) %>
      <br>
      <% end %>
  </ul>
</div>
