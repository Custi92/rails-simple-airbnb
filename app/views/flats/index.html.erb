<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1>All our flats</h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to flat.name, flat_path(flat) %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
            <p class="card-text"><%= flat.description %></p>
            <div class="d-flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
                <i class="fa-solid fa-euro-sign ms-4"></i>
                <span><%= flat.price_per_night %></span>
            </div>
            <a href="#" class="card-link"><%= link_to "Edit", edit_flat_path(flat) %></a>
            <a href="#" class="card-link ms-4"><%= link_to "Delete", flats_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
